<h1>id=<%= @task.id %>のタスク詳細ページ</h1>
<table class="table table-bordered">
  <thead>
    <th>id</th>
    <th>タスク</th>
    <th>ステータス</th>
  </thead>
  <tbody>
    <tr>
      <td><%= @task.id %></td>
      <td><%= @task.status %></td>
      <td><%= @task.content %></td>
    </tr>
  </tbody>
</table>



<%= link_to "編集する", edit_task_path(@task),class:'btn btn-default' %>
<%= link_to "このタスクを削除する", @task, method: :delete,data:{confirm:"本当に削除してよろしいですか？"},class:'btn btn-danger' %>
 