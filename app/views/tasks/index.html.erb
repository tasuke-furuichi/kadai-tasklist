<h1>タスク一覧</h1>
<%if @tasks.any? %>
  <table class="table table-borderd">
    <thead>
      <th>id</th>
      <th>タスク</th>
      <th>ステータス</th>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id,task %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
        </tr>
      <% end %>
      
    </tbody>
  
</table>
<% end %>
